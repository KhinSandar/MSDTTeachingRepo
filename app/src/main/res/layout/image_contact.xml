<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_contack_white"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view2"
        android:layout_width="361dp"
        android:layout_height="144dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/image_contact_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="125dp"
        android:layout_height="101dp"
        android:src="@drawable/luffy"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        android:text="One of Worst Generation"
        android:textAlignment="inherit"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/circleImageView"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="181dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="Monkey.D.luffy"
        android:textAlignment="inherit"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:drawableStart="@drawable/ic_clock"
        android:paddingTop="2dp"
        android:layout_width="85dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="2dp"
        android:textSize="8dp"
        android:text="10:30"
        app:layout_constraintStart_toEndOf="@+id/circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="30dp"
        android:layout_height="37dp"
        android:background="@drawable/bg_contack_white2"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/ic_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>